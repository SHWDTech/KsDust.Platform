<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 昆山市扬尘在线监控平台</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)
    <script src="~/Scripts/Utility/echarts.min.js" type="text/javascript"></script>
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("昆山市扬尘在线监控平台", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/"><span class="glyphicon glyphicon-home" style="margin-right: 10px;"></span>首页</a></li>
                    <li><a href="/Home/Monitor"><span class="glyphicon glyphicon-map-marker" style="margin-right: 10px;"></span>监测</a></li>
                    <li><a href="/Home/Statistics"><span class="glyphicon glyphicon-globe" style="margin-right: 10px;"></span>统计</a></li>
                    <li><a href="/Home/Report"><span class="glyphicon glyphicon-align-left" style="margin-right: 10px;"></span>报表</a></li>
                    <li><a href="/Home/Setting"><span class="glyphicon glyphicon-cog" style="margin-right: 10px;"></span>设置</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" id="main-container">
        @RenderBody()
    </div>
    <footer>
        <p style="text-align: center; border-top: 1px solid #e7e7e7; padding-top: 5px;">&copy; @DateTime.Now.Year - 昆山住建委</p>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
