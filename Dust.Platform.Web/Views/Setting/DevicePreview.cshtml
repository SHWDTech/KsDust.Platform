@using System.Web.Mvc
@using System.Web.Mvc.Html
@{
    Layout = null;
}

<div class="panel panel-default">
    <div class="panel-heading">
        @Html.DropDownList("vendorsSelect", (List<SelectListItem>)ViewBag.Vendors, new { style = ""})
        <input type="button" class="btn btn-primary" value="查询" id="devPreviewQuery"/>
    </div>
    <div class="panel-body">
        @(Html.BootstrapTable("devicePreview", "/Setting/DevicePreviewTable", TablePaginationOption.server, new
          {
              data_page_size = 50,
              data_cache = false
          })
              .Column("设备名称", "Name")
              .Column("供应商", "VendorName")
              .Column("设备MN码", "NodeId")
              .Column("工程名称", "ProjectName")
              .Column("联系人", "SuperIntend")
              .Column("联系电话", "Mobile")
              .Column("最后数据时间", "LastDataTime")
              .Column("操作")
              .Apply(ColumnOption.width, "100")
              .Apply(ColumnOption.formatter, "devicePreviewOperater")
              .Apply(ColumnOption.events, "devicePreviewEvents"))
    </div>
</div>

<div class="modal fade" id="dprModal" tabindex="-1" role="dialog" aria-labelledby="dprModallabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="dprModallabel"></h4>
            </div>
            <div class="modal-body">

            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $('#vendorsSelect').select2();
    var devicePreviewOperater = function () {
        return [
            '<a class="preview" href="javascript:void(0)" title="查看历史数据">历史数据</a>'
        ].join('');
    }

    window.devicePreviewEvents = {
        'click .preview': function (e, value, row) {
            $.get('/Setting/DeviceHistoryData', { deviceGuid: row.Id }, function (ret) {
                $('#dprModal .modal-body').html(ret);
                $('#dprModallabel').html(row.Name + ' - 历史数据查询');
                $('#dprModal').modal();
            });
        }
    };

    var vendor = null;

    $('#devPreviewQuery').on('click', function () {
        vendor = $('#vendorsSelect').val();
        $('#devicePreview').bootstrapTable('refresh', {
            url: '/Setting/DevicePreviewTable'
        });
    });

    $(function() {
        $('#devicePreview').bootstrapTable({
            height: $('#devicePreview').parents('.tab-content').height() - 100,
            queryParams: function (params) {
                params.VendorGuid = vendor;
                return params;
            }
        });
    });
</script>