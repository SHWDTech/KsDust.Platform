@model Dust.Platform.Web.Models.Setting.DeviceRegisterViewModel
@{
    Layout = null;
}

<div id="deviceRegisterForm">
    @using (Ajax.BeginForm("DeviceRegister",
                                 new
                                 {
                                     @class = "form"
                                 },
                                 new AjaxOptions
                                 {
                                     InsertionMode = InsertionMode.Replace,
                                     UpdateTargetId = "deviceRegisterForm",
                                     HttpMethod = "POST"
                                 }))
    {
        <table class="table table-striped table-bordered table-hover">
            <tbody>
            <tr>
                <td>@Html.LabelFor(m => m.Device.Name)</td>
                <td>
                    @Html.TextBoxFor(m => m.Device.Name, new { @class = "form-control", PlaceHolder = "请输入设备名称" })
                    @Html.ValidationMessageFor(m => m.Device.Name, null, new { @class = "text-danger" })
                </td>
                <td>@Html.LabelFor(m => m.Device.NodeId)</td>
                <td>
                    @Html.TextBoxFor(m => m.Device.NodeId, new { @class = "form-control", PlaceHolder = "请输入设备MN码" })
                    @Html.ValidationMessageFor(m => m.Device.NodeId, null, new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.Camera.Name)</td>
                <td>
                    @Html.TextBoxFor(m => m.Camera.Name, new { @class = "form-control", PlaceHolder = "请输入摄像头名称" })
                    @Html.ValidationMessageFor(m => m.Camera.Name, null, new { @class = "text-danger" })
                </td>
                <td>@Html.LabelFor(m => m.Camera.SerialNumber)</td>
                <td>
                    @Html.TextBoxFor(m => m.Camera.SerialNumber, new {@class = "form-control", PlaceHolder = "请输入摄像头序列号"})
                    @Html.ValidationMessageFor(m => m.Camera.SerialNumber, null, new {@class = "text-danger"})
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.Camera.UserName)</td>
                <td>
                    @Html.TextBoxFor(m => m.Camera.UserName, new { @class = "form-control", PlaceHolder = "请输入摄像头登陆用户名" })
                    @Html.ValidationMessageFor(m => m.Camera.UserName, null, new { @class = "text-danger" })
                </td>
                <td>@Html.LabelFor(m => m.Camera.Password)</td>
                <td>
                    @Html.PasswordFor(m => m.Camera.Password, new { @class = "form-control", PlaceHolder = "请输入摄像头登陆密码" })
                    @Html.ValidationMessageFor(m => m.Camera.Password, null, new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td colspan="4">
                    @Html.ValidationMessage("Vendor", null, new { @class = "text-danger" })
                </td>
            </tr>
                <tr>
                    <td colspan="4">
                        <input type="submit" value="提交注册" class="btn btn-primary" />
                    </td>
                </tr>
            </tbody>
        </table>
    }
</div>
